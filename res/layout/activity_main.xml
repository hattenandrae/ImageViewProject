<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/imageButton8"
        android:layout_marginLeft="14dp"
        android:text="Praise God"
        android:background="#FFFF00" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView4"
        android:layout_below="@+id/imageButton5"
        android:text="Prayer" 
        android:background="#FFFF00"/>

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@android:color/transparent"
        android:layout_alignRight="@+id/imageButton3"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/images40" 
        android:onClick="crossPrayer"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:text="Hope" 
        android:background="#FFFF00"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton7"
        android:layout_below="@+id/imageButton7"
        android:layout_marginLeft="14dp"
        android:text="Believe" 
        android:background="#FFFF00"/>

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@android:color/transparent"
        android:layout_alignLeft="@+id/imageButton1"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/images38" 
        android:onClick="crossGodFirst"/>

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@android:color/transparent"
        android:layout_alignLeft="@+id/imageButton8"
        android:layout_alignTop="@+id/imageButton4"
        android:scaleType="fitCenter"
        android:src="@drawable/images40" 
        android:onClick="crossFaith"/>

    <TextView
        android:id="@+id/christMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/imageButton1"
        android:layout_marginLeft="14dp" 
        android:text="Encourage"
        
        android:background="#FFFF00"/>

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@android:color/transparent"
        android:layout_above="@+id/textView6"
        android:layout_alignRight="@+id/imageButton7"
        android:scaleType="fitCenter"
        android:src="@drawable/images44" 
        android:onClick="crossPraiseGod"/>

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/imageButton2"
        android:scaleType="fitCenter"
        android:src="@drawable/images41" 
        android:onClick="CrossBelieve"/>

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/imageButton3"
        android:background="@android:color/transparent"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="38dp"
        android:maxWidth="@dimen/activity_horizontal_margin"
        android:scaleType="fitCenter"
        android:src="@drawable/images36" 
        android:onClick="ChurchCross"/>

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@android:color/transparent"
        android:layout_above="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/images39" 
        android:onClick="crossHope"/>

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@android:color/transparent"
        android:layout_alignLeft="@+id/imageButton4"
        android:layout_alignTop="@+id/imageButton8"
        android:scaleType="fitCenter"
        android:src="@drawable/images43" 
        android:onClick="crossTrust"/>

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@android:color/transparent"
        android:layout_alignLeft="@+id/imageButton6"
        android:layout_alignTop="@+id/imageButton1"
        android:scaleType="fitCenter"
        android:src="@drawable/images37" 
        android:onClick="CrossLove"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/textView8"
        android:text="Love"
        android:background="#FFFF00"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton5"
        android:layout_alignLeft="@+id/textView8"
        android:text="Trust" 
        android:background="#FFFF00"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/christMessage"
        android:layout_below="@+id/imageButton3"
        android:text="God 1st" 
        android:background="#FFFF00"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView3"
        android:layout_below="@+id/imageButton9"
        android:text="Faith" 
        android:background="#FFFF00"/>

</RelativeLayout>